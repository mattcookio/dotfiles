# Ghostty Configuration

# Font settings
font-family = "JetBrainsMono Nerd Font"

# Window settings
window-decoration = true
window-padding-x = 20
window-padding-y = 20

# Tab settings
# tab-bar = true (removed - unknown field)
# tab-bar-location = top (removed - unknown field)

# Misc settings
clipboard-trim-trailing-spaces = true
copy-on-select = true
mouse-hide-while-typing = true

# macOS specific
macos-option-as-alt = true
# macos-titlebar-style = transparent

# Shell integration
shell-integration = zsh

# Keybindings (macOS style)
keybind = cmd+t=new_tab
keybind = cmd+w=close_tab
keybind = cmd+shift+]=next_tab
keybind = cmd+shift+[=previous_tab
keybind = cmd+1=goto_tab:1
keybind = cmd+2=goto_tab:2
keybind = cmd+3=goto_tab:3
keybind = cmd+4=goto_tab:4
keybind = cmd+5=goto_tab:5
keybind = cmd+6=goto_tab:6
keybind = cmd+7=goto_tab:7
keybind = cmd+8=goto_tab:8
keybind = cmd+9=goto_tab:9
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = cmd+k=clear_screen
keybind = cmd+plus=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = cmd+0=reset_font_size

# Tab navigation with ctrl+h/l
keybind = control+h=previous_tab
keybind = control+l=next_tab

# Split navigation with caps lock (control) + cmd + hjkl
keybind = control+cmd+h=goto_split:left
keybind = control+cmd+j=goto_split:down
keybind = control+cmd+k=goto_split:up
keybind = control+cmd+l=goto_split:right

# Split resizing with ctrl + opt + hjkl
keybind = control+opt+h=resize_split:left,50
keybind = control+opt+j=resize_split:down,50
keybind = control+opt+k=resize_split:up,50
keybind = control+opt+l=resize_split:right,50

# Equalize splits
keybind = control+opt+equal=equalize_splits

# Quick terminal
keybind = global:control+opt+space=toggle_quick_terminal
quick-terminal-position = center
quick-terminal-size = 800px,600px
quick-terminal-animation-duration = 0

# Gruvbox Dark theme
background = #282828
foreground = #ebdbb2

# Black
palette = 0=#282828
palette = 8=#928374

# Red
palette = 1=#cc241d
palette = 9=#fb4934

# Green
palette = 2=#98971a
palette = 10=#b8bb26

