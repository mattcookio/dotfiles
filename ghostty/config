palette = 3=#d79921
palette = 11=#fabd2f

# Blue
palette = 4=#458588
palette = 12=#83a598

# Magenta
palette = 5=#b16286
palette = 13=#d3869b

# Cyan
palette = 6=#689d6a
palette = 14=#8ec07c

# White
palette = 7=#a89984
palette = 15=#ebdbb2
keybind = shift+enter=text:\n
